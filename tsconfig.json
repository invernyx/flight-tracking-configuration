{
  "compilerOptions": {
    "types": [
      "node",
      "vite/client",
      "@vitest/browser/providers/playwright",
      "@vitest/browser/matchers",
      "vitest/globals"
    ],
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src", "tests"]
}
